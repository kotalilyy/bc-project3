{
  "name": "unashamed",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "if-env": "^1.0.4",
    "react-router-dom": "^5.2.0"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "heroku-postbuild": "cd client && npm run build",
    "build": "cd client && npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "[![License: GPL v3](https://img.shields.io/badge/License-GPLv3-blue.svg)](https://www.gnu.org/licenses/gpl-3.0)",
  "main": "server/server.js",
  "devDependencies": {
    "concurrently": "^5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kotalilyy/bc-project3.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kotalilyy/bc-project3/issues"
  }
}
